{% extends "@Simplr/Install/layout.html.twig" %}
{% trans_default_domain "installation" %}
{% block title 'title.update'|trans %}
{% block content %}
    <!-- Main component for a primary marketing message or call to action -->
    <div class="box">
        <div class="row">
            <div class="col-lg-12">
                <h1>{{ 'title.update'|trans }} <br/><small>{{ 'slogan.update'|trans }}</small></h1>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <h2>{{ 'subtitle.update_run'|trans }}</h2>

                <p>{{ 'intro.update_run'|trans|raw }}</p>

                <div id="UpdateOutput"></div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script type="text/javascript">
        $(function() {
            $('#UpdateOutput').css({
                'height': '500px',
                'background-color': 'purple'
            })
        });
    </script>
{% endblock %}
