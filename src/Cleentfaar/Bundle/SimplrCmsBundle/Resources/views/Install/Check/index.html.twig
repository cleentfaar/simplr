{% extends "@Simplr/Install/layout.html.twig" %}
{% trans_default_domain "installation" %}
{% block title 'title.check'|trans %}
{% block content %}
    <!-- Main component for a primary marketing message or call to action -->
    <div class="box">
        <div class="row">
            <div class="col-lg-12">
                <h1>{{ 'title.check'|trans }} <br/><small>{{ 'slogan.check'|trans }}</small></h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 hidden-phone hidden-tablet text-center">
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <img src="{{ asset('bundles/cleentfaarsimplrcms/install/img/paper-plane-check.png') }}" class="illustration"/>
                    </div>
                </div>
            </div>
            <div class="col-md-8 col-xs-12 col-sm-12">
                <h2>{{ 'subtitle.check'|trans }}</h2>

                <p>{{ 'intro.check'|trans|raw }}</p>

                <p>
                    <a class="btn btn-lg btn-primary" href="{{ path('simplr_install_check_run') }}" role="button">{{ 'link.continue'|trans }} &raquo;</a>
                    <a class="btn btn-lg btn-link" href="javascript:history.go(-1);" role="button">{{ 'link.cancel'|trans }}</a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}
