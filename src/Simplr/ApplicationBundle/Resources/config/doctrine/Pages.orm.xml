<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Simplr\ApplicationBundle\Entity\Pages" table="simplr_pages">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="slug" type="text" column="slug" nullable="false"/>
    <field name="title" type="text" column="title" nullable="false"/>
    <field name="content" type="text" column="content" nullable="false"/>
    <field name="defaults" type="text" column="defaults" nullable="false"/>
    <field name="requirements" type="text" column="requirements" nullable="false"/>
    <field name="options" type="text" column="options" nullable="false"/>
    <field name="template" type="text" column="template" nullable="false"/>
    <field name="active" type="boolean" column="active" nullable="false"/>
  </entity>
</doctrine-mapping>
